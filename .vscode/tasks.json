	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "module.tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"type": "typescript",
			"tsconfig": "module.tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build"
        },
        {
			"type": "typescript",
			"tsconfig": "commonjs.tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"type": "typescript",
			"tsconfig": "commonjs.tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build"
		}
	]
}